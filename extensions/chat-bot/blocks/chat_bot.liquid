      </svg>
    </button>
    <div id="chatbubble-window">
      <div id="chatbubble-header">
        <div class="chat-up-logo">
          <img
            src="https://awesoon.tech/wp-content/uploads/2023/04/cropped-awesoon-technologies-50.png"
            alt="chatup-logo"
            width="50"
            height="50"
            loading="lazy">
          <div id="message-container">
            <div id="message"></div>
          </div>
        </div>
        <button
          id="chatbubble_close"
          class="close_button"
          onclick="toggleChat()">X</button>
      </div>
      <div id="chatbubble-messages"><!-- Chat messages will be dynamically added here -->
      </div>
      <div id="chatbubble-input">
        <textarea
          id="chatbubble-input-field"
          placeholder="Type your message..."
          oninput="adjustInputHeight(this)"
          onkeydown="sendMessageOnEnter(event)"
          rows="1"></textarea>
        <button
          id="chatbubble-send"
          style="    height: 10%;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                width: 10%;"
